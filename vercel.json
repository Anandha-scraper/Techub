{
  "version": 2,
  "builds": [
    { 
      "src": "api/simple.js", 
      "use": "@vercel/node"
    },
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "dist/public", 
        "buildCommand": "npm run build" 
      } 
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/simple.js"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}